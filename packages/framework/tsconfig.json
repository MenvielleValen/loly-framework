{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "types": ["node"],
    "paths": {
      "@src/*": ["src/*"],
      "@constants/*": ["constants/*"],
      "@rendering/*": ["modules/rendering/*"],
      "@router/*": ["modules/router/*"],
      "@build/*": ["modules/build/*"],
      "@dev/*": ["modules/dev/*"],
      "@runtime/*": ["modules/runtime/*"],
      "@server/*": ["modules/server/*"],
      "@font/*": ["modules/font/*"],
      "@cache/*": ["modules/cache/*"],
      "@security/*": ["modules/security/*"],
      "@validation/*": ["modules/validation/*"],
      "@logger/*": ["modules/logger/*"],
    }
  },
  "include": ["src", "constants", "modules", "tsup.config.ts"]
}
